<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.MAUI.Views.ContactsPage"
             Title="ContactsPage">
    <VerticalStackLayout Spacing="5">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="btnEditContact" Text="Edit Contact" Clicked="BtnEditContact_Clicked"></Button>
        <Button x:Name="btnAddContact" Text="AddContact" Clicked="BtnAddContact_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>