<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.MAUI.Views.ContactsPage"
             Title="Contacts">
    <VerticalStackLayout Spacing="5">
        <ListView x:Name="contactsList" 
                  BackgroundColor="Transparent"
                  RowHeight="70"
                  ItemTapped="ContactsList_ItemTapped"
                  ItemSelected="ContactsList_ItemSelected"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"
                              Detail="{Binding Email}">
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
      
        <Button x:Name="btnEditContact" 
                Text="Edit Contact" 
                Clicked="BtnEditContact_Clicked">
        </Button>
        
        <Button x:Name="btnAddContact" 
                Text="AddContact" 
                Clicked="BtnAddContact_Clicked">
        </Button>

    </VerticalStackLayout>
</ContentPage>